<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#1476c6"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="270dp"
        android:layout_height="305dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/quiz_app" />

    <Button
        android:id="@+id/play_game_btn"
        android:layout_width="112dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:layout_toEndOf="@+id/appLogo"
        android:layout_toRightOf="@+id/appLogo"
        android:background="@drawable/btn_rounded"
        android:text="Play Game" />

    <Button
        android:id="@+id/instructions_btn"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_below="@+id/play_game_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="182dp"
        android:layout_marginRight="182dp"
        android:layout_toEndOf="@+id/appLogo"
        android:layout_toRightOf="@+id/appLogo"
        android:background="@drawable/btn_rounded"
        android:onClick="instructionAct"
        android:text="Instructions" />

    <Button
        android:id="@+id/leaderboard_btn"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_below="@+id/instructions_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:layout_toEndOf="@+id/appLogo"
        android:layout_toRightOf="@+id/appLogo"
        android:background="@drawable/btn_rounded"
        android:onClick="leaderboardAct"
        android:text="Leaderboard" />

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="109dp"
        android:layout_height="39dp"
        android:layout_below="@+id/leaderboard_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:layout_toEndOf="@+id/appLogo"
        android:layout_toRightOf="@+id/appLogo"
        android:background="@drawable/btn_rounded"
        android:text="Exit Game" />

    <TextView
        android:id="@+id/highScoreTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="17dp"
        android:text="High Score: 0"
        android:textColor="@android:color/white" />


</RelativeLayout>